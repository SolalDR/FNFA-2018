<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    style="@style/FragmentContainer">

    <RelativeLayout
        style="@style/FragmentBody">

        <TextView
            android:id="@+id/tv_Stars"
            android:text="@string/title_activity_stars"
            style="@style/Title"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_Stars"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="8dp"></RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerStars"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/header_event"
            android:layout_height="569dp"
            android:animateLayoutChanges="true"
            />

    </RelativeLayout>

</RelativeLayout>
