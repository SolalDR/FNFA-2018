<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.solal.festivalnationaldufilmdanimation.HomeActivity">

    <include layout="@layout/navigation"></include>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:transitionName="mainBody"
        style="@style/FragmentContainer">

        <RelativeLayout
            style="@style/FragmentBody"
            android:paddingTop="5dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_top_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                        android:id="@+id/tv_Infos"
                        style="@style/Title"
                        android:text="@string/title_activity_info" />


                    <RelativeLayout
                        android:id="@+id/map_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tv_Infos"
                        android:layout_marginTop="27dp"
                        android:background="@color/white"
                        android:padding="8dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map"
                                android:layout_width="match_parent"
                                android:layout_height="290dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true" />

                        </android.support.v7.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/place_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/map_container"
                        android:paddingLeft="20dp"
                        android:paddingTop="4dp">

                        <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                            android:id="@+id/name_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_cinema_name"
                            android:textColor="@color/colorPrimary" />

                        <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                            android:id="@+id/address_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/name_place"
                            android:text="@string/first_cinema_address"
                            android:textColor="@color/colorPrimary" />

                    </RelativeLayout>


                    <!-- TARIFS -->


                    <RelativeLayout
                        android:id="@+id/tarif_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/place_detail"
                        android:paddingBottom="20dp"
                        android:paddingTop="10dp">

                        <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                            android:id="@+id/tarifs_title"
                            style="@style/Title"
                            android:paddingBottom="20dp"
                            android:paddingTop="25dp"
                            android:text="Tarifs" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tarifs_title"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                                android:letterSpacing="0.2"
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="Tout Public"
                                android:textAllCaps="true"
                                android:background="@drawable/border_left"
                                android:textColor="@color/black" />

                            <RelativeLayout style="@style/Tarif">

                                <View style="@style/TarifLine" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                                    style="@style/TarifTitle"
                                    android:text="Professionnel" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                                    style="@style/TarifPrice"
                                    android:text="10€" />
                            </RelativeLayout>

                            <RelativeLayout style="@style/Tarif">

                                <View style="@style/TarifLine" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                                    style="@style/TarifTitle"
                                    android:text="Professionnel" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                                    style="@style/TarifPrice"
                                    android:text="10€" />
                            </RelativeLayout>

                            <RelativeLayout style="@style/Tarif">

                                <View style="@style/TarifLine" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                                    style="@style/TarifTitle"
                                    android:text="Professionnel" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                                    style="@style/TarifPrice"
                                    android:text="10€" />
                            </RelativeLayout>

                            <RelativeLayout style="@style/Tarif">

                                <View style="@style/TarifLine" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                                    style="@style/TarifTitle"
                                    android:text="Professionnel" />

                                <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                                    style="@style/TarifPrice"
                                    android:text="10€" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </ScrollView>

        </RelativeLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
