<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    style="@style/FragmentContainer">


    <!-- BODY -->
    <RelativeLayout
        style="@style/FragmentBody">


        <!-- HEADER -->
        <RelativeLayout
            android:id="@+id/header_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/rounded_top_grey"
            android:elevation="6dp"
            android:paddingTop="18dp">

            <!-- HEADER__CONTENT -->
            <RelativeLayout
                android:id="@+id/header_event_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:layout_centerHorizontal="true">

                <!-- Current date -->
                <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                    android:id="@+id/textCurrentDate"
                    style="@style/EventDateSelector"
                    android:layout_alignParentTop="true"
                    android:text="@string/title_activity_event"
                    android:layout_centerHorizontal="true"/>

                <!-- Date before (left) -->
                <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                    android:id="@+id/textLastDate"
                    style="@style/EventDateSelector"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Test" />

                <!-- Next date (right) -->
                <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                    android:id="@+id/textNextDate"
                    style="@style/EventDateSelector"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Test2" />

            </RelativeLayout>


        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/header_event"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

    </RelativeLayout>

</RelativeLayout>
