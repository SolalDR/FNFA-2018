<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <!-- Les CardView possèdent des attributs supplémentaires dont
         - cardBackgroundColor
         - cardElevation pour l'élévation (donc aussi l'ombre)
         - cardCornerRadius pour arrondir les angles
     -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/line">


        <!-- Les CardView agissent comme des FrameLayout,
         pour avoir une organisation verticale nous devons
         donc rajouter un LinearLayout -->

        <TextView

            android:id="@+id/programTime"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:background="?android:selectableItemBackground"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:textColor="#333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/programTitle"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/programTime"
            android:layout_alignStart="@+id/programTime"
            android:layout_below="@+id/programTime"
            android:background="?android:selectableItemBackground"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:textColor="#333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/programPlace"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/programTime"
            android:layout_alignStart="@+id/programTime"
            android:layout_below="@+id/programTitle"
            android:background="?android:selectableItemBackground"
            android:fontFamily="sans-serif"
            android:padding="2dp"
            android:textColor="#333"
            android:textSize="20sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>