<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <!-- Les CardView possèdent des attributs supplémentaires dont
         - cardBackgroundColor
         - cardElevation pour l'élévation (donc aussi l'ombre)
         - cardCornerRadius pour arrondir les angles
     -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:orientation="horizontal"
        android:padding="10dp">


        <!-- Les CardView agissent comme des FrameLayout,
         pour avoir une organisation verticale nous devons
         donc rajouter un LinearLayout -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton">

            <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView

                android:id="@+id/programTime"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/programTitle"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/programTitle"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textColor="#010a3b"
                android:textSize="14dp" />

            <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                android:id="@+id/programTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/programPlace"
                android:layout_alignStart="@+id/programPlace"
                android:layout_below="@+id/programTime"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textColor="#010a3b"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                android:id="@+id/programPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/programTitle"
                android:layout_toLeftOf="@+id/imageButton"
                android:layout_toStartOf="@+id/imageButton"
                android:background="?android:selectableItemBackground"
                android:fontFamily="sans-serif"
                android:padding="2dp"
                android:textColor="#010a3b"
                android:textSize="17sp" />

        </RelativeLayout>


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/roundedbutton"
            android:contentDescription="@string/title_activity_stars"
            android:onClick="changeText"
            app:srcCompat="@drawable/nofav" />


    </RelativeLayout>


</android.support.v7.widget.CardView>