<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.solal.festivalnationaldufilmdanimation.MainActivity"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    style="@style/FragmentContainer">

    <RelativeLayout
        style="@style/FragmentBody">

        <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
            android:id="@+id/tv_Infos"
            android:text="@string/title_activity_info"
            style="@style/Title" />


        <RelativeLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_Infos"
            android:layout_marginTop="27dp"
            android:background="@color/white"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/map_container"
            android:paddingLeft="20dp"
            android:paddingTop="4dp">

            <com.example.solal.festivalnationaldufilmdanimation.views.BoldTextView
                android:id="@+id/name_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_cinema_name"
                android:textColor="@color/colorPrimary" />

            <com.example.solal.festivalnationaldufilmdanimation.views.RegularTextView
                android:id="@+id/address_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_place"
                android:layout_alignParentLeft="true"
                android:text="@string/first_cinema_address"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>